%link(rel="stylesheet" type="text/css" href="/css/table.css")
%table>
  %th
    %tr 
      %td Hostname
      %td IP
      %td ITG ID
      %td Room
      %td UID
      %td Notes
      %td Enabled?
  %tb>
    %tr 
      %td= object['hostname']
      %td= object['ip'] == "" ? object['ip'] :  "Dynamic"
      %td= object['itgid']
      %td= object['room'] || "Go find it!"
      %td= object['uid'] || "Figure out who owns me!"
      %td= object['notes'] || "This entry needs some notes."
      %td= object['enabled']
